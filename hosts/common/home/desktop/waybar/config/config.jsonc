    "interval": 960,
    "return-type": "string",
    "on-click": "echo 'Refreshing weather...' && ${wrapped-weather-plugin}/bin/weather-plugin"
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-muted": "ğŸ”‡",
    "format-icons": {
      "default": ["ğŸ”ˆ", "ğŸ”‰", "ğŸ”Š"]
