    "on-scroll-up": "~/.config/polybar/pavolume.sh --up",
    "on-scroll-down": "~/.config/polybar/pavolume.sh --down"
  },
  "network": {
    "format-wifi": "{essid} ({signalStrength}%) ï‡«",
