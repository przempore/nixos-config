{
  "layer": "top",
  "position": "top",
  "height": 30,
  "modules-left": ["hyprland/workspaces", "hyprland/window"],
  // "modules-center": ["custom/kernel", "custom/weather"],
  "modules-center": ["custom/kernel"],
  "modules-right": ["pulseaudio", "network", "memory", "cpu", "clock", "battery", "tray"],
  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "ï‚¬",
